# 实验名称，用于区分不同实验的 TensorBoard 日志
EXPERIMENT_NAME=rb_seed_changed

# ========== 数据路径配置 ==========
TRAIN_FILE=datasets/news_personality/train.tsv
TEST_FILE=datasets/news_personality/test.tsv
ARTICLES_FILE=datasets/news_personality/articles.csv

# ========== 模型配置 ==========
# 基座模型名称，可选: roberta-base, bert-base-uncased, microsoft/deberta-base 等
BASE_MODEL=roberta-base
NUM_LABELS=5
# 是否冻结基座模型参数
FREEZE_BASE=False
# 是否只使用本地模型文件，不连接 Hugging Face（避免网络连接）
LOCAL_FILES_ONLY=True

# ========== 训练配置 ==========
BATCH_SIZE=32
LEARNING_RATE=4e-5
NUM_EPOCHS=1000
MAX_LENGTH=512
# 验证集比例
VAL_SPLIT=0.1
# 随机种子
SEED=19260817
# 权重衰减
WEIGHT_DECAY=0.01
# 梯度裁剪
MAX_GRAD_NORM=1.0

# ========== 输出配置 ==========
OUTPUT_DIR=./checkpoints
# 注意：实际保存路径为 {OUTPUT_DIR}/{EXPERIMENT_NAME}/
LOG_DIR=logs
# 注意：实际保存路径为 {LOG_DIR}/{EXPERIMENT_NAME}/
TENSORBOARD_DIR=./runs

# ========== Checkpoint配置 ==========
# 每N个epoch保存一次checkpoint（0表示每个epoch都保存）
SAVE_EVERY_N_EPOCHS=2
# 是否只保存最佳模型
SAVE_BEST_ONLY=False
# 最多保留的checkpoint数量（0表示不限制）
MAX_CHECKPOINTS=5

# ========== TensorBoard配置 ==========
# 是否使用TensorBoard
USE_TENSORBOARD=True
# 每N个batch记录一次到tensorboard
LOG_INTERVAL=10

# ========== 日志配置 ==========
# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# 日志文件名（可选，如果为空则不保存到文件）
LOG_FILE=

# ========== 模型改进配置 ==========
# 是否使用改进的模型架构（改进池化 + MLP头）
USE_IMPROVED_MODEL=True
# 是否使用改进的池化（mean + max + cls）
USE_IMPROVED_POOLING=True
# 是否使用MLP回归头
USE_MLP_HEAD=True
# MLP隐藏层大小
MLP_HIDDEN_SIZE=256

# ========== GPU和显存优化配置 ==========
# 指定使用的GPU ID（None或空表示自动选择，可以设置为0,1,2等）
GPU_ID=1
# 梯度累积步数（用于节省显存，有效batch size = BATCH_SIZE * GRADIENT_ACCUMULATION_STEPS）
GRADIENT_ACCUMULATION_STEPS=4
# 是否使用梯度检查点（节省显存但增加计算时间）
GRADIENT_CHECKPOINTING=True
# 是否使用混合精度训练（FP16，节省显存）
FP16=True
